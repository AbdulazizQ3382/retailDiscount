# Environment Variables Example File
# Copy this file to .env and update the values as needed

# ===========================
# MongoDB Configuration
# ===========================

# MongoDB Root Credentials
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=retailDiscount

# MongoDB Connection URI for Application
# Format: mongodb://username:password@host:port/database?authSource=admin&options
MONGO_URI=mongodb://root:password@mongodb:27017/retailDiscount?authSource=admin&ConnectTimeoutMS=3000&maxPoolSize=20&maxIdleTimeMS=30000

# ===========================
# Application Configuration
# ===========================

# JWT Settings
JWT_EXPIRATION=86400000

# Server Configuration
SERVER_PORT=8080

# ===========================
# Actuator & Management
# ===========================

# Actuator endpoints to expose (comma-separated)
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# ===========================
# Logging Configuration
# ===========================

# Application logging levels
LOGGING_LEVEL_SA_STORE_RETAILDISCOUNT=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG

# ===========================
# Spring Profiles
# ===========================

# Active Spring profile
SPRING_PROFILES_ACTIVE=docker

# ===========================
# Mongo Express (Database UI)
# ===========================

# Mongo Express credentials
ME_CONFIG_MONGODB_ADMINUSERNAME=root
ME_CONFIG_MONGODB_ADMINPASSWORD=password
ME_CONFIG_MONGODB_SERVER=mongodb
ME_CONFIG_MONGODB_PORT=27017

# Mongo Express basic auth
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin123

# ===========================
# Docker Network Configuration
# ===========================

# Custom network subnet (optional)
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# ===========================
# Port Mappings
# ===========================

# Application port mapping (host:container)
APP_PORT_MAPPING=8080:8080

# MongoDB port mapping (host:container)
MONGO_PORT_MAPPING=27017:27017

# Mongo Express port mapping (host:container)
MONGO_EXPRESS_PORT_MAPPING=8081:8081

# ===========================
# Volume Configuration
# ===========================

# MongoDB data volume name
MONGODB_DATA_VOLUME=mongodb_data

# MongoDB config volume name
MONGODB_CONFIG_VOLUME=mongodb_config

# Application logs volume name
APP_LOGS_VOLUME=app_logs

# ===========================
# Security Configuration
# ===========================

# Default Spring Security credentials (for development only)
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin123

# ===========================
# Development Settings
# ===========================

# Docker compose environment
COMPOSE_PROJECT_NAME=retail-discount

# Container restart policy
RESTART_POLICY=unless-stopped

# ===========================
# Health Check Configuration
# ===========================

# Health check intervals (in seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_START_PERIOD=60
HEALTH_CHECK_RETRIES=3

# ===========================
# Notes
# ===========================

# 1. Never commit .env file to version control
# 2. Update passwords and secrets for production use
# 3. Use strong passwords for production environments
# 4. Consider using Docker secrets for sensitive data in production
# 5. The MONGO_URI should match the MongoDB credentials above